{
  "name": "graphql-mesh",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "bun run prebuild:mesh && wrangler build",
    "prebuild:mesh": "mesh build --output .mesh",
    "mesh:dev": "mesh dev",
    "deploy": "bun run build && wrangler deploy",
    "dev": "(kill -9 $(lsof -t -i:7500) || true) && wrangler dev --name graphql-mesh --port 7500 --inspector-port 7300",
    "start": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.7.5",
    "@cloudflare/workers-types": "^4.20250312.0",
    "typescript": "^5.5.2",
    "vitest": "~3.0.7",
    "wrangler": "^3.114.1"
  },
  "dependencies": {
    "@graphql-hive/gateway": "^1.12.1",
    "@graphql-mesh/compose-cli": "^1.4.1",
    "@graphql-mesh/cross-helpers": "^0.4.10",
    "@graphql-mesh/graphql": "^0.104.1",
    "@graphql-mesh/http-handler": "^0.0.1-alpha-20231120143216-c55e37539",
    "@graphql-mesh/migrate-config-cli": "^1.6.1",
    "@graphql-mesh/utils": "^0.104.1",
    "dataloader": "^2.2.3",
    "graphql": "^16.10.0"
  }
}
